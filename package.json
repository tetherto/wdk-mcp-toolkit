{
  "name": "@tetherto/wdk-mcp",
  "version": "1.0.0-beta.1",
  "description": "Model Context Protocol (MCP) server for Tether Wallet Development Kit (WDK). Provides unified blockchain operations through the MCP.",
  "keywords": [
    "wdk",
    "mcp",
    "wallet",
    "blockchain",
    "model-context-protocol"
  ],
  "author": "Tether",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/tetherto/wdk-mcp-toolkit.git"
  },
  "main": "index.js",
  "type": "module",
  "types": "./types",
  "scripts": {
    "build:types": "tsc",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./src/index.js"
    },
    "./tools/*": {
      "types": "./types/tools/*.d.ts",
      "default": "./src/tools/*.js"
    },
    "./package": {
      "default": "./package.json"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "standard": {
    "ignore": [
      "types/**/*.d.ts",
      "examples/**/*.js",
      "tests/**/*.js"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.23.0",
    "@tetherto/wdk": "^1.0.0-beta.4",
    "@tetherto/wdk-indexer-http": "github:tetherto/wdk-indexer-http",
    "@tetherto/wdk-pricing-bitfinex-http": "^1.0.0-beta.1",
    "@tetherto/wdk-wallet": "^1.0.0-beta.6",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "standard": "17.1.2",
    "typescript": "^5.8.3"
  }
}
