{
  "name": "@tetherto/wdk-mcp",
  "version": "1.0.0-beta.1",
  "description": "Model Context Protocol (MCP) server for Tether Wallet Development Kit (WDK). Provides unified blockchain operations through the MCP.",
  "keywords": [
    "wdk",
    "mcp",
    "wallet",
    "blockchain",
    "model-context-protocol"
  ],
  "author": "Tether",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/tetherto/wdk-mcp.git"
  },
  "main": "src/index.js",
  "type": "module",
  "types": "./types",
  "scripts": {
    "build:types": "tsc",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "start": "node examples/basic.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./src/index.js"
    },
    "./tools/*": {
      "default": "./src/tools/*.js"
    },
    "./package": {
      "default": "./package.json"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "standard": {
    "ignore": [
      "types/**/*.d.ts",
      "examples/**/*.js"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.23.0",
    "@tetherto/wdk": "^1.0.0-beta.4",
    "@tetherto/wdk-wallet-btc": "^1.0.0-beta.3",
    "@tetherto/wdk-wallet-evm": "^1.0.0-beta.4"
  }
}
